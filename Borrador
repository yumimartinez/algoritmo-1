// AÑADIR
void producto_datos ()
{	
	FILE*ptr;
	producto prod;
	do{
	cout << "ID producto: ";
	cin >> prod.IdProd;
	}while(prod.IdProd<99);
	cout << "Producto: ";
	do
	{
	gets (prod.nombre);
	}while(strlen(prod.nombre)==0);
	cout << "Stock: ";
	cin >> prod.stock;
	do{
	cout << "Precio: ";
	cin >> prod.precio;
	}while(prod.precio<=0);
	prod.estado = 'A';

	ptr=fopen("producto.dat","ab");
	fwrite (&prod,sizeof(prod),1,ptr);
	fclose (ptr);
}
void cliente_datos()
{
	FILE*ptr;
	cliente reg;
	cout << endl;
	do
	{
	cout << "ID cliente: ";
