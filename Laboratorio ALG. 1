#include <iostream>
#include <conio.h>

using namespace std;

int contar_digitos(int n)
{
	int c=0;
	while(n>0)
	{
		n=n/10;
		c++;
	}
	return c;
}

int sumar_digitos(int n)
{
	int sum=0,d;
	while(n>0)
	{
		d=n%10;
		sum=sum+d;
		n=n/10;
		
	}
	return sum;
}

//Dado un numero natural invertir
int invertir_numero(int n)
{
	int d,s=0;
	while(n>0)
	{
		d=n%10;
		n=n/10;
		s=(s*10)+d;
	}
	return s;
}
//Dado un numero sumar los primos
bool verif_primo(int n)
{
	bool k=true;
	int i;
	for (i=2;i<n;i++)
	{
		if(n%i==0)
		{
			k=false;
		}
	}
	return k;
}

int sumar_primos(int n)
{
	int s=0,d;
	while(n>0)
	{
		d=n%10;
		n=n/10;
		if(verif_primo(d)==true)
		{
			s=s+d;
		}
	}
	return s;
}

int concatenar_numeros(int n1, int n2)
{
	int c=0,d,p;
	c=n2;
	p=invertir_numero(c);
	while(n1>0)
	{
		d=n1%10;
		n1=n1/10;
		p=(p*10)+d;
	}
	return (invertir_numero(p));
}

