void producto ()
{	
	
	FILE*ptr1;
	producto prod;
	cout << "Codigo ";
	cin >> prod.IdProd;
	cout << "Cliente ";
	cin >> prod.nombre;
	cout << "Precio ";
	cin >> prod.precio;
	ptr1=fopen("producto","ab");
	fwrite (&prod,sizeof(prod),1,ptr1);
	fclose (ptr1);
}



void main()
{
	archivo_producto ("producto");
	archivo_cliente ("cliente");
