#include <iostream>
#include <conio.h>
#include <string.h>
#include <stdio.h>

struct producto
{
	int IdProd;
	char nombre[30];
	int stock;
	float precio;
};

struct cliente 
{
	int IdVenta;
	char nombre[30];
	char NIT;
	char email[30];
};

struct automovil
{
	int IdAuto;
	char placa[12];
	int IdCliente;
};

struct bomba
{
	int IdBomba;
	char descripcion[12];
	int IdProd;
	int IdVenta;
};

struct compra
{
	int IdCompra;
	char fecha[10];
	int cantidad;
	float precioUnitario;
	int IdBomba;
	int IdAuto;
};

using namespace std;

void archivo_producto (char nomArchivo[])
{
	FILE *ptr1;
	ptr1=fopen("producto", "ab");
	fclose(ptr1);
}

