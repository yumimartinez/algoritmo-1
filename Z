//Mostrar nombres
void MostrarNombreBomba(int x)
{
	FILE*ptr;
	regbomba reg;
	ptr=fopen("bomba.dat","rb");
	if(ptr!=NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);

		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && reg.idbomba == x)
			{
				cout<<reg.descripcion<<endl;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
void MostrarNombreCliente(int x)
{
	FILE*ptr;
	regcliente reg;
	ptr=fopen("cliente.dat","rb");
	if(ptr!=NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);

		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && reg.idcliente == x)
{
				cout<<reg.nombre<<endl;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
