void Mostrar_automotor_nombres()
{
	FILE*ptr;
	regautomotor reg;
	ptr=fopen("automotor.dat","rb");
	if(ptr!=NULL)
	{
		cout<<endl<<"	Lista de automotores: "<<endl;
		cout<<"Idautomotor              Placa                 Idcliente			Cliente";
		fread(&reg,sizeof(reg),1,ptr);

		while(feof(ptr)==false)
		{
			if(reg.estado=='S')
			{
				cout<<endl<<setw(25)<<left<<reg.idautomotor<<setw(25)<<left<<reg.placa<<left<<reg.idcliente<<"      ";
				MostrarNombreCliente(reg.idcliente);
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}

bool reducir_stockProducto(int cantidad,int prod)
{
	regproducto reg;
	FILE *ptr; 
	ptr= fopen("producto.dat","r+b");
	bool puede = true;
	if(ptr!=NULL)
	{ 
		fread(&reg,sizeof(reg),1,ptr);
		while(!feof(ptr))
		{
			if(reg.idproducto == prod)
			{
				reg.stock= reg.stock - cantidad;
				if(reg.stock < 0)
				{
					puede = false;
					cout<<endl<<"error: insuficiente stock"<<endl;
					break;
				}
				fseek(ptr,sizeof(reg)*(-1),SEEK_CUR);
				fwrite(&reg,sizeof(reg),1,ptr);
				break;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout <<"El Archivo no existe";
	}
	return puede;
}
void mostrarstock(int id)
{FILE *ptr;
 regproducto reg;
 ptr=fopen("producto.dat","rb");
 if(ptr!=NULL)
 {fread(&reg,sizeof(reg),1,ptr);
  while(feof(ptr)==false)
  {if(reg.idproducto==id)
    {cout << "El stock actual es : "<<reg.stock<<endl;
	}
   fread(&reg,sizeof(reg),1,ptr);
  }
 }
}

regventas solicitar_datos_ventas()
{ bool valido;
	regventas reg;
	do
	{
		reg.idventa=GenerarIdVentas();
	}while(existeVentas(reg.idventa)==true);
	Mostrar_bomba();
	do
	{
		reg.idbomba=IdBomba();
	}while( existeBomba( reg.idbomba)==false);
	reg.idproducto=id_producto();
	Mostrar_automotor_nombres();
	do
	{
		reg.idautomotor=IdAutomotor();
	}while(existeAutomotor(reg.idautomotor)==false);
	mostrarstock(reg.idproducto);
	do
	{
		reg.cantidad=cantidad();
	}while(!reducir_stockProducto(reg.cantidad,reg.idproducto));
	
	do
	{
		valido = true;
		if(!generar_fecha(reg.fecha))
		{
			cout<<endl<<"error: fecha no valida"<<endl;
			valido = false;
		}
	}while(!valido);
	reg.preciototal = PrecioTotal(reg.idproducto,reg.cantidad);
reg.estado='S';
	return(reg);
}
void Mostrar_ventas()
{
	FILE*ptr;
	regventas reg;
	ptr=fopen("ventas.dat","rb");
	if(ptr!=NULL)
	{
		cout<<endl<<"	Lista de ventas: "<<endl;
		cout<< "Idventas   Fecha     Idproducto  Cantidad   Preciototal   Idbomba   Idauto";
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{
			if(reg.estado=='S')
			{
				cout<<endl<<setw(10)<<left<<reg.idventa;
				cout<<setw(16)<<left<<reg.fecha;
				cout<<setw(9)<<left<<reg.idproducto;
				cout<<setw(13)<<left<<reg.cantidad;
				cout<<setw(14)<<left<<reg.preciototal;
				cout<<setw(8)<<left<<reg.idbomba;
				cout<<left<<reg.idautomotor;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}

void registrar_ventas()
{
	FILE *ptr;
	regventas reg;
	ptr=fopen("ventas.dat","ab");
	if(ptr==NULL)
	{
		crear_archivo_ventas();
	}
	fclose(ptr);

	ptr=fopen("ventas.dat","ab");
	fread(&reg,sizeof(reg),1,ptr);
	reg=solicitar_datos_ventas();
	fwrite(&reg,sizeof(reg),1,ptr);
	fclose(ptr);
}

void modificarventa()
{
	FILE *ptr;
	regventas reg;
	int id;
	do
	{
		id=IdVenta();
	}while(existeVentas(id)==false);
	ptr= fopen("ventas.dat","r+b");
	int c;
	if(ptr!=NULL)
	{ 
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{
			if(reg.idventa==id)
			{
				fseek(ptr,(-1)*sizeof(reg),SEEK_CUR);
				reg.idproducto=id_producto();
				c = reg.cantidad;
				Mostrar_bomba();
				do
				{
					reg.idbomba=IdBomba();
				}while( existeBomba( reg.idbomba)==false);
				Mostrar_automotor();
				do
				{
					reg.idautomotor=IdAutomotor();
				}while(existeAutomotor(reg.idautomotor)==false);
				mostrarstock(reg.idproducto);
				do
{
					reg.cantidad=cantidad();
				}while(!reducir_stockProducto(reg.cantidad - c,reg.idproducto));
				generar_fecha(reg.fecha);
				reg.preciototal = PrecioTotal(reg.idproducto,reg.cantidad);
				fwrite(&reg,sizeof(reg),1,ptr);
				break;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
}


//ELIMINAR

void eliminarclientes()
{
	FILE *ptr;
	regcliente reg;
	int id;
	do
	{
		id=IdCliente(); 
	}while(existeCliente(id)==false || existeClienteEnAutomotor(id));
	ptr= fopen("cliente.dat","r+b");
	if(ptr!=NULL)
	{		
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{ 
			if(reg.idcliente==id && reg.estado=='S')
			{
				fseek(ptr,(-1)*sizeof(reg),SEEK_CUR);
				reg.estado = 'N';
				fwrite(&reg,sizeof(reg),1,ptr);
				break;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
}
void eliminarproducto()
{
	FILE *ptr;
	regproducto reg;
	char aux[30];
	int id;
	cout<<endl<<"Ingrese un producto: ";
	cout<<endl<<"1. Gasolina Especial";
	cout<<endl<<"2. Gasolina Premium";
	cout<<endl<<"3. Diesel";
	cout<<endl<<"4. Gas";
	cout<<endl<<"Seleccione: ";
	do
	{
		do
		{
			fflush(stdin);
			gets(aux);
		}while( VerifSoloNumeros(aux)==false);
		id = atoi(aux);
	}while(existeProducto(id)==false || existeProductoEnBomba(id) || existeProductoEnCompras(id) || existeProductoEnVentas(id));
	ptr= fopen("producto.dat","r+b");
	if(ptr!=NULL)
	{		
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{ 
			if(reg.idproducto==id && reg.estado=='S')
			{
				fseek(ptr,(-1)*sizeof(reg),SEEK_CUR);
				reg.estado = 'N';
				fwrite(&reg,sizeof(reg),1,ptr);
				break;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
}
