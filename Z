void eliminarventa()
{
	FILE *ptr;
	regventas reg;
	int id;
	do
	{
		id=IdVenta(); 
	}while(existeVentas(id)==false);
	ptr= fopen("ventas.dat","r+b");
	if(ptr!=NULL)
	{		
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{ 
			if(reg.idventa==id && reg.estado=='S')
			{
				fseek(ptr,(-1)*sizeof(reg),SEEK_CUR);
				reg.estado = 'N';
				aumenta_stockProducto(reg.cantidad,reg.idproducto);

				fwrite(&reg,sizeof(reg),1,ptr);
				break;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
}
//REPORTES
float ventas_de_bomba(int x,char f1[],char f2[])
{
	float m = 0;
	FILE*ptr;
	regventas reg;
	ptr=fopen("ventas.dat","rb");
	if(ptr!=NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && reg.idbomba == x && entrefechas(reg.fecha,f1,f2))
			{
				m = m + reg.preciototal;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	return m;
}
void bomba_que_mas_vende_en_periodo(char f1[],char f2[])
{
	FILE*ptr;
	regbomba reg;
	ptr=fopen("bomba.dat","rb");
	float monto = 0;
	int id_mayor = 0;
	float mayor = 0;
	char desc[40];
	if(ptr!=NULL)
	{
		cout<<endl<<"	Lista de bombas que vendieron en el periodo ingresado: "<<endl;
		cout<< "Idbomba		Descripcion	     Monto Vendido";
		fread(&reg,sizeof(reg),1,ptr);
while(feof(ptr)==false)
		{
			if(reg.estado=='S')
			{
				monto = ventas_de_bomba(reg.idbomba,f1,f2);
				if(monto > 0)
				{
					cout<<endl<<setw(13)<<left<<reg.idbomba<<setw(28)<<left<<reg.descripcion<<left<<monto;
				}
				if(monto > mayor)
				{
					mayor = monto;
					strcpy(desc,reg.descripcion);
					id_mayor = reg.idbomba;
				}
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
		if(mayor > 0 )
		{
			cout<<endl<<"mejor vendedor: "<<desc;
			cout<<endl<<"monto: "<<mayor;
		}
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
float ventas_automovil(int x,char f1[],char f2[])
{
	float m = 0;
	FILE*ptr;
	regventas reg;
	ptr=fopen("ventas.dat","rb");
	if(ptr!=NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && reg.idautomotor == x && entrefechas(reg.fecha,f1,f2))
			{
				m = m + reg.preciototal;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	return m;
}

float ventas_a_cliente(int x,char f1[],char f2[])
{
	FILE*ptr;
	regautomotor reg;
	ptr=fopen("automotor.dat","rb");
	float m = 0;
	if(ptr!=NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);

		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && reg.idcliente == x)
			{
				m = m + ventas_automovil(reg.idautomotor,f1,f2);
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
	}
	return m;
}

void cliente_que_mas_compra_en_periodo(char f1[],char f2[])
{
	FILE*ptr;
	regcliente reg;
char nombre[30];
	ptr=fopen("cliente.dat","rb");
	float mayor = 0;
	float monto;
	int id_mayor = 0;
	if(ptr!=NULL)
	{
		cout<<endl<<"idcliente       nombre           monto";
		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false)
		{
			if(reg.estado=='S')
			{
				monto = ventas_a_cliente(reg.idcliente,f1,f2);
				if(monto > 0)
				{
					cout<<endl<<setw(15)<<left<<reg.idcliente<<setw(20)<<left<<reg.nombre<<left<<monto;
				}
				if(monto > mayor)
				{
					mayor = monto;
					id_mayor = reg.idcliente;
					strcpy(nombre,reg.nombre);
				}
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		fclose(ptr);
		if(mayor != 0)
		{
			cout<<endl<<"mejor comprador: "<< nombre << "       " ;
			cout<<endl<<"monto: "<<mayor;
		}
		else
		{
			cout<<endl<<"no hubieron ventas en ese periodo";
		}
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
void compras_periodo(char f1[],char f2[])
{
	float m = 0;
	FILE*ptr;
	regcompras reg;
	ptr=fopen("compras.dat","rb");
	int zp_mes;
	int zp_anho;
	int acu;
	if(ptr!=NULL)
	{
		cout<<endl<<"	Lista de compras: "<<endl;
		cout<< "Idcompra       Fecha      Idproducto     Cantidad      Preciototal";

		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false && !fechamayor(reg.fecha,f1))
		{
			fread(&reg,sizeof(reg),1,ptr);
		}
		zp_mes = atoi(reg.fecha + 3);
		zp_anho = atoi(reg.fecha + 6);
		acu = 0;

		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && fechamenor(reg.fecha,f2))
			{
				if(zp_mes == atoi(reg.fecha + 3) && zp_anho == atoi(reg.fecha + 6))
				{
					acu = acu + reg.preciototal;
				}
				else
				{
					cout<<endl<<"compras periodo "<<zp_mes<<"/"<<zp_anho<<": "<<acu;
					acu = reg.preciototal;
					zp_mes = atoi(reg.fecha + 3);
					zp_anho = atoi(reg.fecha + 6);
				}
cout<<endl<<setw(12)<<left<<reg.idcompras<<setw(17)<<left<<reg.fecha<<setw(16)<<left<<reg.idproducto<<setw(16)<<left<<reg.cantidad<<left<<reg.preciototal;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		if(acu != 0)
		{
			cout<<endl<<"compras periodo "<<zp_mes<<"/"<<zp_anho<<": "<<acu;
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
void ventas_periodo(char f1[],char f2[])
{
	float m = 0;
	FILE*ptr;
	regventas reg;
	ptr=fopen("ventas.dat","rb");
	int zp_mes;
	int zp_anho;
	int acu;
	if(ptr!=NULL)
	{
	

		fread(&reg,sizeof(reg),1,ptr);
		while(feof(ptr)==false && !fechamayor(reg.fecha,f1))
		{
			fread(&reg,sizeof(reg),1,ptr);
		}
		zp_mes = atoi(reg.fecha + 3);
		zp_anho = atoi(reg.fecha + 6);
		acu = 0;

		while(feof(ptr)==false)
		{
			if(reg.estado=='S' && fechamenor(reg.fecha,f2))
			{
				if(zp_mes == atoi(reg.fecha + 3) && zp_anho == atoi(reg.fecha + 6))
				{
					acu = acu + reg.preciototal;
				}
				else
				{
					cout<<endl<<"ventas periodo "<<zp_mes<<"/"<<zp_anho<<": "<<acu;
					acu = reg.preciototal;
					zp_mes = atoi(reg.fecha + 3);
					zp_anho = atoi(reg.fecha + 6);
				}
				cout<<endl;
				cout<<endl<<"	Lista de ventas en periodo: "<<endl;
				cout<< "Idventas     Fecha    Idproducto    Cantidad    Preciototal  Idbomba  Idauto";
				cout<<endl<<setw(10)<<left<<reg.idventa<<setw(15)<<left<<reg.fecha<<setw(12)<<left<<reg.idproducto<<setw(15)<<left<<reg.cantidad<<setw(13)<<left<<reg.preciototal<<setw(8)<<left<<reg.idbomba<<setw(15)<<left<<reg.idautomotor;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
		if(acu != 0)
		{
			cout<<endl<<"ventas periodo "<<zp_mes<<"/"<<zp_anho<<": "<<acu;
			cout<<endl;
		}
		fclose(ptr);
	}
	else
	{
		cout<<"NO EXISTE ARCHIVO";
	}
	cout<<endl;
}
// menus de archivos

void menu_cliente()
{ 
	char opcion[30];
	int op,numerito,mod,num,x,p,clave;
regcliente reg; 
	do
	{
		do
		{
			cout << endl; 
			cout << "******** MENU DEL CLIENTE ********" << "" ;
			cout << endl;
			cout << " 1.- limpiar archivo" << "";
			cout << endl;
			cout << " 2.- registrar cliente" << "";
			cout << endl;
			cout << " 3.- modificar registro del cliente"<< "";
			cout << endl;
			cout << " 4.- mostrar clientes "<< "";
			cout << endl;
			cout << " 5.- eliminar cliente "<< "";
			cout << endl;
			cout << " 0.- "<< "volver a menu principal";
			cout << endl;
			cout << "seleccione una opcion" << "";
			cout << endl;

			gets(opcion);

			system ("cls");

		}while(VerifSoloNumeros(opcion)==false);
		op=atoi(opcion);

		switch (op)
		{
		case 1: cout << "acceso restringido";
			cout << endl; 
			cout << " introducir clave de administrador "; 
			cout << endl; 
			cin  >> clave; 
			if (clave ==1234)
			{ 
				cout << "******** Instrucciones *********";
				cout << endl; 
				cout << " En caso de que ya exista el archivo, se borraran los datos que tenga, si crea de nuevo el archivo"; 
				cout << endl; 
				cout << "Esta seguro que desea limpiar el archivo? " ;
				cout << endl;
				cout << " 1.- si" << "";
				cout << endl; 
				cout << " 0.- no" << "";
				cout << endl; 
				cin  >> p;
				if (p!=0)
				{
					crear_archivo("cliente.dat");
					break; 
				}
				else 
				{break;
				}
			}
			else
			{ cout << " clave no valida, volvera al menu anterior";
			break; 
			}
		case 2: registrar_cliente();
			break; 

		case 3: MostrarClientes();
			cout<< endl;

			modificarcliente();

			break;

		case 4: MostrarClientes();
			break;

		case 5: MostrarClientes();
			cout<<endl;
			eliminarclientes();

			break;

		default: 
			break; 

		}
	getch();
system("cls");

	}while(op != 0 );

}

