#include <iostream>
#include <conio.h>
#define FIL 10
#define COL 10

using namespace std;

void cargarcaracol (int mat[FIL][COL],int n)
{
int i,help=0,d=1;
while(help<n/2){
	for(i = help;i < n-help;i++){
		mat[help][i]=d;
		d++;
	}
	for(i = help+1;i < n-help;i++){
		mat[i][n-1-help] = d;
		d++;
	}
	for(i = n-2-help;i >=help;i--){
		mat[n-1-help][i] = d;
		d++;
	}
	for(i=n-2-help;i > help;i--){
		mat[i][help]=d;
		d++;
	}
	help++;
}
if(n%2!=0)
	mat[n/2][n/2] = n*n;
}

void mostrar(int mat[FIL][COL],int n){
	int i,j;
	for(i = 0;i < n;i++){
		for(j = 0;j < n;j++){
			cout << mat[i][j] << " ";
		}
		cout << endl;
	}
}

void main (){
	int n,s=0;
	int mat[FIL][COL];
	cout << "Ingrese el tamaÃ±o de la matriz: ";
	cin >> n;
	cout << endl;
	cout << "La matriz es: " << endl;
	cargarcaracol (mat,n);
	mostrar (mat,n);

getch();
}
